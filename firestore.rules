rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas estrictas: Todo denegado por defecto
    match /{document=**} {
      allow read, write: if false;
    }

    // Colecci√≥n Artifacts (Donde se guarda todo)
    // Estructura: artifacts/{appId}/users/{userId}/...
    match /artifacts/{appId}/users/{userId} {
      // El usuario solo puede leer/escribir SU propia data
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Subcolecciones (products, clients, etc)
      match /{document=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
